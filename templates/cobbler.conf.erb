# This configuration file allows cobbler data
# to be accessed over HTTP.

AliasMatch ^/cblr(?!/svc/)(.*)?$ "<%= @default_webroot -%>$1"
AliasMatch ^/cobbler_track(.*)?$ "<%= @default_webroot -%>$1"
#AliasMatch ^/cobbler(.*)?$ "<%= @default_webroot -%>$1"
Alias /cobbler <%= @default_webroot -%>
Alias /cobbler_webui_content <%= @default_webroot -%>_webui_content

WSGIScriptAliasMatch ^/cblr/svc/([^/]*) <%= @default_webroot -%>/svc/services.py

<Directory "<%= @default_webroot -%>">
    Options Indexes FollowSymLinks
    Order allow,deny
    Allow from all
</Directory>

ProxyRequests off

ProxyPass /cobbler_api http://localhost:25151/
ProxyPassReverse /cobbler_api http://localhost:25151/

BrowserMatch "MSIE" AuthDigestEnableQueryStringHack=On

# the webui is now part of the "cobbler-web" package
# and is visited at http://.../cobbler_web not this URL.
# this is only a pointer to the new page.

<Directory "<%= @default_webroot -%>/web/">
    Options Indexes FollowSymLinks
    Order allow,deny
    Allow from all
</Directory>

